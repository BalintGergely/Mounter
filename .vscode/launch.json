{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Attach debugger",
			"type": "debugpy",
			"request": "attach",
			"processId":"${command:pickProcess}",
			"justMyCode": true
		},
		{
			"name": "Python: Debug mounter",
			"type": "python",
			"request": "launch",
			"module": "mounter",
			"args": ["tests.cpp.multi.project","main.exe"]
		},
		{
			"name": "LLDB: Attach debugger",
			"type": "lldb",
			"request": "attach",
			"pid": "${command:pickMyProcess}"
		},
		{
			"name": "Java: Attach debugger",
			"type": "java",
			"request": "attach",
			"processId":"${command:PickJavaProcess}"
		}
	]
}